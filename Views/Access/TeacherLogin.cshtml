@model Assignment2.PLL.Models.VMLogin;
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutAccess.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>
    <form asp-controller="Access" asp-action="TeacherLogin" method = "post">
        <h1>Login</h1>
        <input type="email" placeholder="Email" asp-for="Email"/>
        <input type="password" placeholder="Password" asp-for="Password"/>

        <label>
            <input type="checkbox" asp-for="KeepLoggedIn"/>
            Keep me logged in
        </label>

        <button type="submit">Login</button>

        @if(ViewData["ValidateMessage"] != null)
        {
            <br />
            <br />
            <label>@ViewData["ValidateMessage"]</label>
        }
    </form>
</body>
</html>
