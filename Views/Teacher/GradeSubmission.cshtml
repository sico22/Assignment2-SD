@model Assignment2.DAL.Models.Submission

@{
    ViewData["Title"] = "GradeSubmission";
    Layout = "~/Views/Shared/_LayoutTeacher.cshtml";
}

<h1>GradeSubmission</h1>

<h4>Submission</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="GradeSubmission">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SubmissionId" class="control-label"></label>
                <input asp-for="SubmissionId" class="form-control" />
                <span asp-validation-for="SubmissionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Grade" class="control-label"></label>
                <input asp-for="Grade" class="form-control" />
                <span asp-validation-for="Grade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ShowSubjects">Back to List</a>
</div>

