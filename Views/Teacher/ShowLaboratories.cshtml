@model IEnumerable<Assignment2.DAL.Models.Laboratory>

@{
    ViewData["Title"] = "ShowLaboratories";
    Layout = "~/Views/Shared/_LayoutTeacher.cshtml";
}

<h1>ShowLaboratories</h1>

<p>
    <a asp-action="CreateLaboratory">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Curricula)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AssignmentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AssignmentDl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AssignmentDescription)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Curricula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AssignmentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AssignmentDl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AssignmentDescription)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditLaboratory", new {  id=item.LaboratoryId}) |
                @Html.ActionLink("Create Assignment", "CreateAssignment", new { id=item.LaboratoryId }) |
                @Html.ActionLink("Edit Assignment", "EditAssignment", new { id=item.LaboratoryId }) |
                @Html.ActionLink("Attendance", "ShowAttendances", new { id=item.LaboratoryId }) |
                @Html.ActionLink("Submissions", "ShowSubmissions", new { id=item.LaboratoryId }) |
                @Html.ActionLink("Delete", "DeleteLaboratory", new { id=item.LaboratoryId},new { onclick = "return confirm('Are you sure you want to delete this item?');" })
            </td>
        </tr>
}
    </tbody>
</table>
